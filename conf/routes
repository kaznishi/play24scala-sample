# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /sample                           controllers.SampleController.index
GET     /sample/hoge                           controllers.SampleController.hoge
GET     /sample/echo                           controllers.SampleController.echo
GET     /sample/todo                           controllers.SampleController.todo
GET     /sample/add                           controllers.SampleController.add
POST     /sample/add                           controllers.SampleController.add
GET     /sample/list                           controllers.SampleController.list
GET     /sample/list-dummy                           controllers.SampleController.listDummy
GET     /sample/test                           controllers.SampleController.test
GET     /signin                           controllers.DefaultController.signin

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
